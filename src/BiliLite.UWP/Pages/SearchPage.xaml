                        SelectedValuePath="value"
                        SelectionChanged="ComboBox_SelectionChanged" />

                </Grid>
                <toolkit:AdaptiveGridView
                    Grid.Row="1"
                    Padding="8"
                    DesiredWidth="600"
                    IsItemClickEnabled="True"
                    ItemClick="Search_ItemClick"
