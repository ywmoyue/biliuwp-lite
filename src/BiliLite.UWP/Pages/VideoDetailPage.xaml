<local:PlayPage
    x:Class="BiliLite.Pages.VideoDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="using:BiliLite.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:detail="using:BiliLite.Models.Common.Video.Detail"
    xmlns:fa="using:FontAwesome5"
    xmlns:local="using:BiliLite.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modules="using:BiliLite.Modules"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:user="using:BiliLite.ViewModels.User"
    xmlns:video="using:BiliLite.ViewModels.Video"
    xmlns:videoModel="using:BiliLite.Models.Common.Video" xmlns:controls="using:CommunityToolkit.WinUI.Controls" xmlns:imageEx="using:ImageEx"
    Background="Transparent"
    SizeChanged="VideoDetailPage_OnSizeChanged"
    mc:Ignorable="d">
    <Page.Resources>
        <SolidColorBrush x:Key="ListViewItemBackgroundSelected" Color="#64B0B0B0" />
        <SolidColorBrush x:Key="ListViewItemBackgroundSelectedPointerOver" Color="{ThemeResource SystemListLowColor}" />
        <DataTemplate x:Name="PlayListTpl">
            <PivotItem Margin="0">
                <PivotItem.Header>
                    <TextBlock FontSize="18" Text="播放列表" />
                </PivotItem.Header>
            </PivotItem>
        </DataTemplate>
        <MenuFlyout x:Name="TitleRightTappedMenu">
            <MenuFlyoutItem
                x:Name="CopyTitleBtn"
                Click="CopyTitleBtn_Click"
                Text="复制标题" />
            <MenuFlyoutItem
                x:Name="CopyAuthorBtn"
                Click="CopyAuthorBtn_Click"
                Text="复制作者" />
        </MenuFlyout>
        <MenuFlyout x:Name="ShareMenu">
            <MenuFlyoutItem
                Click="btnShareCopyUrl_Click"
                Icon="Copy"
                Text="复制链接" />
            <MenuFlyoutItem
                Click="btnShareCopy_Click"
                Icon="Copy"
                Text="复制标题链接" />
            <MenuFlyoutItem
                Click="BtnCopyAvId_OnClick"
                Icon="Copy"
                Text="复制Av号" />
            <MenuFlyoutItem
                Click="btnShare_Click"
                Icon="Share"
                Text="分享到..." />
        </MenuFlyout>

        <MenuFlyout x:Key="CoinList">
            <MenuFlyoutItem Command="{x:Bind Path=m_viewModel.CoinCommand}" CommandParameter="1">投一个币</MenuFlyoutItem>
            <MenuFlyoutItem Command="{x:Bind Path=m_viewModel.CoinCommand}" CommandParameter="2">投两个币</MenuFlyoutItem>
        </MenuFlyout>
        <Flyout x:Key="FavList">
            <Grid Width="240" PointerPressed="FavList_OnPointerPressed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Padding="4,0">
                    <TextBlock VerticalAlignment="Center" FontWeight="Bold">选择收藏夹</TextBlock>
                    <HyperlinkButton
                        x:Name="btnCreateFavBox"
                        Margin="0,0,-5,0"
                        HorizontalAlignment="Right"
                        Click="btnCreateFavBox_Click">
                        <TextBlock>
                            <Span>
                                <Bold>创建</Bold>
                            </Span>
                        </TextBlock>
                    </HyperlinkButton>
                </Grid>
                <ScrollViewer
                    Grid.Row="1"
                    MaxHeight="480"
                    VerticalScrollBarVisibility="Auto">
                    <ListView ItemsSource="{x:Bind Path=m_viewModel.MyFavorite, Mode=OneWay}" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="user:FavoriteItemViewModel">
                                <CheckBox
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    IsChecked="{x:Bind IsFav, Mode=TwoWay}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{x:Bind Title}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            FontSize="14"
                                            Foreground="Gray"
                                            Visibility="{x:Bind Path=Privacy, Converter={StaticResource DisplayConvert}}">
                                            公开
                                        </TextBlock>
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            FontSize="14"
                                            Foreground="Gray"
                                            HorizontalTextAlignment="Right"
                                            Visibility="{x:Bind Path=Privacy}">
                                            私密
                                        </TextBlock>
                                    </Grid>
                                </CheckBox>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
                <Button
                    x:Name="SaveFavList"
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    Click="SaveFavList_OnClick">
                    <TextBlock>保存</TextBlock>
                </Button>
            </Grid>
        </Flyout>
    </Page.Resources>
    <Grid>
        <Grid Visibility="{x:Bind Path=m_viewModel.Loaded, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition x:Name="RightInfo" Width="{x:Bind m_viewModel.RightInfoWidth, Mode=OneWay}" />
            </Grid.ColumnDefinitions>
            <Grid
                x:Name="playerGrid"
                Grid.ColumnSpan="{x:Bind m_viewModel.PlayerGridColumnSpan, Mode=OneWay}"
                Background="{ThemeResource NavigationViewTopPaneBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition x:Name="BottomInfo" Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Background="Transparent" x:Name="PlayerContainer">
                    <control:PlayerControl
                        x:Name="player"
                        AllMediaEndEvent="player_AllMediaEndEvent"
                        ChangeEpisodeEvent="PlayerControl_ChangeEpisodeEvent"
                        FullScreenEvent="PlayerControl_FullScreenEvent"
                        FullWindowEvent="PlayerControl_FullWindowEvent" />
                </Grid>
                <Grid
                    x:Name="BottomActionBar"
                    Grid.Row="1"
                    SizeChanged="BottomActionBar_OnSizeChanged">
                    <StackPanel Orientation="Horizontal">
                        <Grid>
                            <AppBarButton
                                Width="60"
                                Margin="0,0,4,0"
                                Command="{x:Bind Path=m_viewModel.LikeCommand}"
                                Holding="btnLike_Holding"
                                Icon="Like"
                                Label="{x:Bind Path=m_viewModel.VideoInfo.Stat.Like, Mode=OneWay, Converter={StaticResource NumberToStringConvert}}"
                                RightTapped="btnLike_RightTapped"
                                Style="{StaticResource AppBarButtonNoChevronStyle}"
                                ToolTipService.ToolTip="右击或长按可以一键三连哦"
                                Visibility="{Binding Visibility, ElementName=AccentLike, Converter={StaticResource DisplayConvert}}" />
                            <AppBarButton
                                x:Name="AccentLike"
                                Width="60"
                                Margin="0,0,4,0"
                                Command="{x:Bind Path=m_viewModel.LikeCommand}"
                                Foreground="{ThemeResource SystemAccentColor}"
                                Holding="btnLike_Holding"
                                Label="{x:Bind Path=m_viewModel.VideoInfo.Stat.Like, Mode=OneWay, Converter={StaticResource NumberToStringConvert}}"
                                RightTapped="btnLike_RightTapped"
                                Style="{StaticResource AppBarButtonNoChevronStyle}"
                                ToolTipService.ToolTip="右击或长按可以一键三连哦"
                                Visibility="{x:Bind Path=m_viewModel.VideoInfo.ReqUser.Like, Mode=OneWay, Converter={StaticResource DisplayConvert}, ConverterParameter=1}">
                                <AppBarButton.Icon>
                                    <SymbolIcon Foreground="{ThemeResource SystemAccentColor}" Symbol="Like" />
                                </AppBarButton.Icon>
                            </AppBarButton>
                        </Grid>
                        <Grid>
                            <AppBarButton
                                Width="60"
                                Margin="0,0,4,0"
                                Command="{x:Bind Path=m_viewModel.DislikeCommand}"
                                Icon="Dislike"
                                Label="不喜欢"
                                Style="{StaticResource AppBarButtonNoChevronStyle}"
                                Visibility="{Binding Visibility, ElementName=AccentDislike, Converter={StaticResource DisplayConvert}}" />
                            <AppBarButton
                                x:Name="AccentDislike"
                                Width="60"
                                Margin="0,0,4,0"
                                Command="{x:Bind Path=m_viewModel.DislikeCommand}"
                                Foreground="Red"
                                Label="不喜欢"
                                Style="{StaticResource AppBarButtonNoChevronStyle}"
                                Visibility="{x:Bind Path=m_viewModel.VideoInfo.ReqUser.Dislike, Mode=OneWay, Converter={StaticResource DisplayConvert}, ConverterParameter=1}">
                                <AppBarButton.Icon>
                                    <SymbolIcon Foreground="Red" Symbol="Dislike" />
                                </AppBarButton.Icon>
                            </AppBarButton>
                        </Grid>
                        <Grid>
                            <AppBarButton
                                x:Name="BtnFav"
                                Width="60"
                                Margin="0,0,4,0"
                                Click="BtnFav_OnClick"
                                Flyout="{StaticResource FavList}"
                                Label="{x:Bind Path=m_viewModel.VideoInfo.Stat.Favorite, Mode=OneWay, Converter={StaticResource NumberToStringConvert}}"
                                Style="{StaticResource AppBarButtonNoChevronStyle}"
                                Visibility="{Binding Visibility, ElementName=AccentFav, Converter={StaticResource DisplayConvert}}">
                                <AppBarButton.Icon>
                                    <FontIcon
                                        Margin="-3"
                                        FontFamily="{StaticResource BiliIconFont}"
                                        Glyph="&#xE673;" />
                                </AppBarButton.Icon>
                            </AppBarButton>
                            <AppBarButton
                                x:Name="AccentFav"
                                Width="60"
                                Margin="0,0,4,0"
                                Click="BtnFav_OnClick"
                                Flyout="{StaticResource FavList}"
                                Foreground="{ThemeResource SystemAccentColor}"
                                Label="{x:Bind Path=m_viewModel.VideoInfo.Stat.Favorite, Mode=OneWay, Converter={StaticResource NumberToStringConvert}}"
                                Style="{StaticResource AppBarButtonNoChevronStyle}"
                                Visibility="{x:Bind Path=m_viewModel.VideoInfo.ReqUser.Favorite, Mode=OneWay, Converter={StaticResource DisplayConvert}, ConverterParameter=1}">
                                <AppBarButton.Icon>
                                    <FontIcon
                                        Margin="-3"
                                        FontFamily="{StaticResource BiliIconFont}"
                                        Foreground="{ThemeResource SystemAccentColor}"
                                        Glyph="&#xE673;" />
                                </AppBarButton.Icon>
                            </AppBarButton>
                        </Grid>
                        <Grid>
                            <AppBarButton
                                Width="60"
                                Margin="0"
                                Flyout="{StaticResource CoinList}"
                                Label="{x:Bind Path=m_viewModel.VideoInfo.Stat.Coin, Mode=OneWay, Converter={StaticResource NumberToStringConvert}}"
                                Style="{StaticResource AppBarButtonNoChevronStyle}"
                                Visibility="{Binding Visibility, ElementName=AccentCoin, Converter={StaticResource DisplayConvert}}">
                                <AppBarButton.Icon>
                                    <FontIcon
                                        Margin="-3"
                                        FontFamily="{StaticResource BiliIconFont}"
                                        Glyph="&#xE670;" />
                                </AppBarButton.Icon>
                            </AppBarButton>
                            <AppBarButton
                                x:Name="AccentCoin"
                                Width="60"
                                Margin="0"
                                Flyout="{StaticResource CoinList}"
                                Foreground="{ThemeResource SystemAccentColor}"
                                Label="{x:Bind Path=m_viewModel.VideoInfo.Stat.Coin, Mode=OneWay, Converter={StaticResource NumberToStringConvert}}"
                                Style="{StaticResource AppBarButtonNoChevronStyle}"
                                Visibility="{x:Bind Path=m_viewModel.VideoInfo.ReqUser.Coin, Mode=OneWay, Converter={StaticResource DisplayConvert}, ConverterParameter=1}">
                                <AppBarButton.Icon>
                                    <FontIcon
                                        Margin="-3"
                                        FontFamily="{StaticResource BiliIconFont}"
                                        Foreground="{ThemeResource SystemAccentColor}"
                                        Glyph="&#xE670;" />
                                </AppBarButton.Icon>
                            </AppBarButton>
                        </Grid>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <AppBarButton
                            x:Name="btnShare"
                            Width="56"
                            Flyout="{StaticResource ShareMenu}"
                            Foreground="{ThemeResource TextColor}"
                            Label="分享"
                            Style="{StaticResource AppBarButtonNoChevronStyle}"
                            Visibility="{x:Bind m_viewModel.ShowNormalShareBtn, Mode=OneWay}">
                            <AppBarButton.Icon>
                                <FontIcon
                                    Margin="-3"
                                    FontFamily="{StaticResource BiliIconFont}"
                                    Glyph="&#xE671;" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                        <AppBarButton
                            x:Name="btnDownload"
                            Width="56"
                            Margin="4,0"
                            Click="btnDownload_Click"
                            Foreground="{ThemeResource TextColor}"
                            Label="下载"
                            Style="{StaticResource AppBarButtonNoChevronStyle}"
                            Visibility="{x:Bind m_viewModel.ShowNormalDownloadBtn, Mode=OneWay}">
                            <AppBarButton.Icon>
                                <FontIcon
                                    Margin="-3"
                                    FontFamily="{StaticResource BiliIconFont}"
                                    Glyph="&#xE672;" />
                            </AppBarButton.Icon>
                        </AppBarButton>

                        <AppBarButton
                            Foreground="{ThemeResource TextColor}"
                            Label="手机看"
                            Style="{StaticResource AppBarButtonNoChevronStyle}"
                            Visibility="Collapsed">
                            <AppBarButton.Icon>
                                <fa:FontAwesome Icon="Solid_MobileAlt" />
                            </AppBarButton.Icon>
                            <AppBarButton.Flyout>
                                <Flyout x:Name="qrFlyout">
                                    <StackPanel MaxWidth="220">
                                        <TextBlock
                                            Text="{x:Bind Path=m_viewModel.VideoInfo.Title, Mode=OneWay}"
                                            TextAlignment="Center"
                                            TextWrapping="Wrap" />
                                        <TextBlock TextAlignment="Center" TextWrapping="Wrap">
                                            AV<Run Text="{x:Bind Path=m_viewModel.VideoInfo.Aid, Mode=OneWay}" /></TextBlock>
                                        <Grid Margin="0,8">
                                            <Image
                                                x:Name="imgQR"
                                                Width="200"
                                                Height="200" />
                                            <Image
                                                Width="64"
                                                Height="64"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Source="ms-appx:///Assets/SmallTile.scale-100.png" />
                                        </Grid>
                                        <TextBlock
                                            Text="请使用手机扫描上方二维码"
                                            TextAlignment="Center"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Flyout>
                            </AppBarButton.Flyout>
                        </AppBarButton>
                        <AppBarButton
                            x:Name="btnOpenWeb"
                            Click="btnOpenWeb_Click"
                            Foreground="{ThemeResource TextColor}"
                            Label="浏览器"
                            Style="{StaticResource AppBarButtonNoChevronStyle}"
                            Visibility="Collapsed">
                            <AppBarButton.Icon>
                                <fa:FontAwesome Icon="Solid_GlobeAsia" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                        <AppBarButton
                            x:Name="btnRefresh"
                            Click="btnRefresh_Click"
                            Foreground="{ThemeResource TextColor}"
                            Label="刷新"
                            Style="{StaticResource AppBarButtonNoChevronStyle}"
                            Visibility="Collapsed">
                            <AppBarButton.Icon>
                                <fa:FontAwesome Icon="Solid_Sync" />
                            </AppBarButton.Icon>
                            <AppBarButton.KeyboardAccelerators>
                                <KeyboardAccelerator Key="F5" />
                            </AppBarButton.KeyboardAccelerators>
                        </AppBarButton>

                        <AppBarButton
                            x:Name="btnMore"
                            Width="56"
                            Margin="0"
                            Foreground="{ThemeResource TextColor}"
                            Label="更多"
                            Style="{StaticResource AppBarButtonNoChevronStyle}">
                            <AppBarButton.Icon>
                                <FontIcon
                                    Margin="-3"
                                    FontFamily="{StaticResource BiliIconFont}"
                                    Glyph="&#xE680;" />
                            </AppBarButton.Icon>
                            <AppBarButton.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutSubItem Text="分享" Visibility="{x:Bind m_viewModel.ShowFlyoutShareBtn, Mode=OneWay}">
                                        <MenuFlyoutItem
                                            Click="btnShareCopyUrl_Click"
                                            Icon="Copy"
                                            Text="复制链接" />
                                        <MenuFlyoutItem
                                            Click="btnShareCopy_Click"
                                            Icon="Copy"
                                            Text="复制标题链接" />
                                        <MenuFlyoutItem
                                            Click="btnShare_Click"
                                            Icon="Share"
                                            Text="分享到..." />
                                    </MenuFlyoutSubItem>
                                    <MenuFlyoutItem Click="btnDownload_Click" Visibility="{x:Bind m_viewModel.ShowFlyoutDownloadBtn, Mode=OneWay}">下载</MenuFlyoutItem>
                                    <MenuFlyoutItem Click="BtnWatchLater_Click">稍后再看</MenuFlyoutItem>
                                    <MenuFlyoutItem Click="btnOpenQR_Click">手机观看</MenuFlyoutItem>
                                    <MenuFlyoutItem Click="btnOpenWeb_Click">浏览器打开</MenuFlyoutItem>
                                    <MenuFlyoutItem Click="btnRefresh_Click">刷新</MenuFlyoutItem>
                                </MenuFlyout>
                            </AppBarButton.Flyout>
                        </AppBarButton>
                        <AppBarButton
                            x:Name="BtnOpenRightInfo"
                            Width="56"
                            Margin="0,0,4,0"
                            Background="Transparent"
                            Command="{x:Bind m_viewModel.OpenRightInfoCommand}"
                            Foreground="{ThemeResource TextColor}"
                            Label="详情"
                            Visibility="{x:Bind m_viewModel.ShowOpenRightInfoBtn, Mode=OneWay}">
                            <AppBarButton.Icon>
                                <FontIcon
                                    Margin="-3"
                                    FontFamily="{StaticResource BiliIconFont}"
                                    Glyph="&#xe68a;" />
                            </AppBarButton.Icon>
                        </AppBarButton>
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid
                Grid.Column="1"
                Height="{x:Bind m_viewModel.RightInfoHeight, Mode=OneWay}"
                VerticalAlignment="Top"
                Background="{x:Bind m_viewModel.RightInfoBackground, Mode=OneWay}">
                <Pivot x:Name="pivot" PreviewKeyDown="Pivot_OnPreviewKeyDown">
                    <PivotItem Margin="0">
                        <PivotItem.Header>
                            <TextBlock FontSize="18" Text="详情" />
                        </PivotItem.Header>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="12">
                                <Border
                                    x:Name="VideoCover"
                                    Margin="0,0,0,8"
                                    CornerRadius="{ThemeResource OverlayCornerRadius}">
                                    <imageEx:ImageEx
                                        PlaceholderSource="ms-appx:///Assets/Thumbnails/Placeholde.png"
                                        Source="{x:Bind Path=m_viewModel.VideoInfo.Pic, Mode=OneWay, Converter={StaticResource ImageCompressionConvert}, ConverterParameter='400w'}"
                                        Stretch="UniformToFill"
                                        Tapped="ImageEx_Tapped" />
                                </Border>

                                <Border
                                    Margin="0,0,0,8"
                                    Padding="8"
                                    Background="#33808080"
                                    CornerRadius="{ThemeResource ControlCornerRadius}"
                                    Visibility="{x:Bind Path=m_viewModel.VideoInfo.ShowArgueMsg, Mode=OneWay}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <fa:FontAwesome
                                            Margin="0,0,12,0"
                                            Foreground="Orange"
                                            Icon="Solid_ExclamationTriangle" />
                                        <TextBlock
                                            Grid.Column="1"
                                            FontSize="14"
                                            Text="{x:Bind Path=m_viewModel.VideoInfo.ArgueMsg, Mode=OneWay}"
                                            TextWrapping="Wrap" />
                                    </Grid>
                                </Border>
                                <TextBlock
                                    x:Name="TitleText"
                                    FontSize="18"
                                    RightTapped="TitleText_RightTapped"
                                    Text="{x:Bind Path=m_viewModel.VideoInfo.Title, Mode=OneWay}"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Margin="0,4,0,0"
                                    Foreground="Gray"
                                    IsTextSelectionEnabled="True">
                                    <Run Text="{x:Bind Path=m_viewModel.VideoInfo.Stat.View, Mode=OneWay, Converter={StaticResource NumberToStringConvert}}" />
                                    <Run Text="播放 /" />
                                    <Run Text="{x:Bind Path=m_viewModel.VideoInfo.Stat.Danmaku, Mode=OneWay, Converter={StaticResource NumberToStringConvert}}" />
                                    <Run Text="弹幕 /" />
                                    <Run Text="{x:Bind Path=m_viewModel.VideoInfo.Bvid, Mode=OneWay}" /></TextBlock>
                                <HyperlinkButton
                                    x:Name="btnOpenUser"
                                    Margin="0,8,0,0"
                                    Padding="0"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Click="btnOpenUser_Click"
                                    Foreground="{ThemeResource TextColor}"
                                    Visibility="{x:Bind Path=m_viewModel.VideoInfo.ShowStaff, Mode=OneWay, Converter={StaticResource DisplayConvert}}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Width="36" Height="36">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{x:Bind Path=m_viewModel.VideoInfo.Owner.Face, Mode=OneWay, Converter={StaticResource ImageSourceConvert}, ConverterParameter='48h'}" />
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Margin="8,0" Text="{x:Bind Path=m_viewModel.VideoInfo.Owner.Name, Mode=OneWay}" />
                                            <TextBlock
                                                Margin="8,0"
                                                FontSize="12"
                                                Foreground="Gray"><Run Text="{x:Bind Path=m_viewModel.VideoInfo.OwnerExt.Fans, Mode=OneWay, Converter={StaticResource NumberToStringConvert}}" />
                                                粉丝</TextBlock>
                                        </StackPanel>
                                        <control:AttentionButton
                                            Grid.Column="2"
                                            Attention="{x:Bind m_viewModel.VideoInfo.ReqUser.Attention, Mode=TwoWay}"
                                            UserId="{x:Bind m_viewModel.VideoInfo.Owner.Mid, Mode=OneWay}" />
                                    </Grid>
                                </HyperlinkButton>

                                <StackPanel Visibility="{x:Bind Path=m_viewModel.VideoInfo.ShowStaff, Mode=OneWay}">
                                    <ItemsControl
                                        MaxHeight="{x:Bind Path=m_viewModel.StaffHeight, Mode=OneWay}"
                                        Margin="0,8,0,0"
                                        ItemsSource="{x:Bind Path=m_viewModel.VideoInfo.Staff, Mode=OneWay}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="video:VideoDetailStaffViewModel">
                                                <HyperlinkButton
                                                    Margin="0,8,0,0"
                                                    Padding="0"
                                                    HorizontalAlignment="Stretch"
                                                    HorizontalContentAlignment="Stretch"
                                                    Click="btnOpenUser_Click"
                                                    Foreground="{ThemeResource TextColor}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <Ellipse Width="36" Height="36">
                                                            <Ellipse.Fill>
                                                                <ImageBrush ImageSource="{x:Bind Path=Face, Converter={StaticResource ImageSourceConvert}, ConverterParameter='48h'}" />
                                                            </Ellipse.Fill>
                                                        </Ellipse>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Margin="8,0" Text="{x:Bind Name}" />
                                                            <TextBlock
                                                                Margin="8,0"
                                                                FontSize="12"
                                                                Foreground="Gray"
                                                                Text="{x:Bind Title}" />
                                                        </StackPanel>
                                                        <control:AttentionButton
                                                            Grid.Column="2"
                                                            Attention="{x:Bind Attention, Mode=TwoWay}"
                                                            UserId="{x:Bind Mid, Mode=OneWay}" />
                                                    </Grid>
                                                </HyperlinkButton>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>

                                    </ItemsControl>
                                    <HyperlinkButton
                                        HorizontalAlignment="Center"
                                        Command="{x:Bind Path=m_viewModel.SetStaffHeightCommand}"
                                        CommandParameter="2000.0"
                                        Foreground="Gray"
                                        Visibility="{x:Bind Path=m_viewModel.ShowMoreStaff, Mode=OneWay, Converter={StaticResource DisplayConvert}}">
                                        <StackPanel>
                                            <TextBlock>
                                                制作团队(<Run Text="{x:Bind Path=m_viewModel.VideoInfo.Staff.Count, Mode=OneWay, TargetNullValue='0'}" />
                                                人)</TextBlock>
                                            <FontIcon FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" Glyph="&#xE011;" />
                                        </StackPanel>
                                    </HyperlinkButton>
                                    <HyperlinkButton
                                        HorizontalAlignment="Center"
                                        Command="{x:Bind Path=m_viewModel.SetStaffHeightCommand}"
                                        CommandParameter="88.0"
                                        Foreground="Gray"
                                        Visibility="{x:Bind Path=m_viewModel.ShowMoreStaff, Mode=OneWay}">
                                        <StackPanel>
                                            <FontIcon FontFamily="Segoe Fluent Icons, Segoe MDL2 Assets" Glyph="&#xE010;" />
                                        </StackPanel>
                                    </HyperlinkButton>
                                </StackPanel>

                                <TextBlock
                                    Margin="0,4,0,0"
                                    Foreground="Gray"
                                    IsTextSelectionEnabled="True">
                                    发布于<Run Text="{x:Bind Path=m_viewModel.VideoInfo.PubDate, Mode=OneWay, Converter={StaticResource DatetimeConvert}}" /></TextBlock>
                                <StackPanel x:Name="stDesc" Margin="0,8,0,0">
                                    <TextBlock
                                        x:Name="txtDesc"
                                        Foreground="Gray"
                                        Holding="txtDesc_Holding"
                                        IsTextSelectionEnabled="False"
                                        RightTapped="txtDesc_RightTapped"
                                        Tapped="txtDesc_Tapped"
                                        Text="{x:Bind Path=m_viewModel.VideoInfo.Desc, Mode=OneWay}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="Wrap"
                                        Visibility="Collapsed" />
                                    <ContentControl x:Name="contentDesc" Foreground="Gray" />
                                </StackPanel>
                                <toolkit:AdaptiveGridView
                                    x:Name="listEpisode"
                                    Margin="0,8,0,0"
                                    DesiredWidth="{x:Bind m_viewModel.VideoDetailListEpisodeDesiredWidth, Mode=OneWay}"
                                    ItemHeight="36"
                                    ItemsSource="{x:Bind Path=m_viewModel.VideoInfo.Pages, Mode=OneWay}"
                                    PreviewKeyDown="listEpisode_PreviewKeyDown"
                                    PreviewKeyUp="listEpisode_PreviewKeyUp"
                                    SelectionChanged="listEpisode_SelectionChanged"
                                    Visibility="{x:Bind Path=m_viewModel.VideoInfo.ShowPages, Mode=OneWay}">
                                    <GridView.Header>
                                        <TextBlock Margin="0,8" FontSize="16">
                                            分集(共<Run Text="{x:Bind Path=m_viewModel.VideoInfo.Pages.Count, Mode=OneWay}" />
                                            P)</TextBlock>
                                    </GridView.Header>
                                    <GridView.ItemTemplate>
                                        <DataTemplate x:DataType="detail:VideoDetailPagesModel">
                                            <StackPanel VerticalAlignment="Center" ToolTipService.ToolTip="{x:Bind Path=Part}">
                                                <TextBlock
                                                    Margin="8,0"
                                                    Text="{x:Bind PagePart}"
                                                    TextAlignment="Center"
                                                    TextTrimming="CharacterEllipsis" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridView.ItemTemplate>

                                </toolkit:AdaptiveGridView>

                                <TextBlock Margin="0,20,0,0" FontSize="16">标签</TextBlock>
                                <ItemsControl Margin="0,8,0,0" ItemsSource="{x:Bind Path=m_viewModel.Tags, Mode=OneWay}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <controls:WrapPanel VerticalSpacing="4" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate x:DataType="videoModel:BiliVideoTag">
                                            <HyperlinkButton
                                                Margin="0,0,8,0"
                                                Click="btnTagItem_Click"
                                                Foreground="{ThemeResource TextColor}">
                                                <Border
                                                    Padding="8,4"
                                                    Background="Transparent"
                                                    CornerRadius="{ThemeResource ControlCornerRadius}">
                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="{ThemeResource TextColor}"
                                                        Text="{x:Bind TagName}">
                                                        >
                                                    </TextBlock>
                                                </Border>
                                            </HyperlinkButton>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>
                    </PivotItem>
                    <PivotItem Margin="0">
                        <PivotItem.Header>
                            <TextBlock FontSize="18" Text="评论">
                                <Run FontSize="12" Text="{x:Bind m_viewModel.VideoInfo.Stat.Reply, Mode=OneWay, Converter={StaticResource CountOrTextConvert}}" />
                            </TextBlock>
                        </PivotItem.Header>
                        <control:CommentControl x:Name="comment" />
                    </PivotItem>
                    <PivotItem Margin="0">
                        <PivotItem.Header>
                            <TextBlock FontSize="18" Text="推荐" />
                        </PivotItem.Header>
                        <ListView
                            AllowFocusOnInteraction="False"
                            IsItemClickEnabled="True"
                            ItemClick="listRelates_ItemClick"
                            ItemsSource="{x:Bind Path=m_viewModel.VideoInfo.Relates, Mode=OneWay}"
                            SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="video:VideoDetailRelatesViewModel">
                                    <Grid Margin="0,4">
                                        <Grid.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem
                                                    x:Name="AddToWatchLater"
                                                    Click="AddToWatchLater_Click"
                                                    Icon="Add"
                                                    Text="添加到稍后再看" />
                                            </MenuFlyout>
                                        </Grid.ContextFlyout>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="128" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <imageEx:ImageEx
                                            MaxHeight="80"
                                            Margin="0,2,0,3"
                                            CornerRadius="{ThemeResource OverlayCornerRadius}"
                                            Source="{x:Bind Path=Pic, Converter={StaticResource ImageCompressionConvert}, ConverterParameter='100h'}"
                                            Stretch="UniformToFill" />
                                        <StackPanel Grid.Column="1" Margin="8,2,0,2">
                                            <TextBlock
                                                MaxLines="2"
                                                Text="{x:Bind Title}"
                                                TextAlignment="Justify"
                                                TextTrimming="CharacterEllipsis"
                                                TextWrapping="Wrap" />
                                            <TextBlock
                                                Margin="0,4"
                                                FontFamily="12"
                                                Foreground="Gray"
                                                Text="{x:Bind Path=Owner.Name}"
                                                TextTrimming="CharacterEllipsis" />
                                            <TextBlock
                                                FontFamily="12"
                                                Foreground="Gray"
                                                TextTrimming="CharacterEllipsis"><Run Text="{x:Bind Path=Stat.View, Converter={StaticResource NumberToStringConvert}}" />
                                                播放<Run Text="{x:Bind Path=Stat.Danmaku, Converter={StaticResource NumberToStringConvert}}" />
                                                弹幕</TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </PivotItem>
                </Pivot>
            </Grid>

            <controls:GridSplitter
                x:Name="RightInfoGridSplitter"
                Grid.Column="1"
                Width="16"
                HorizontalAlignment="Left"
                IsEnabled="False"
                ResizeBehavior="BasedOnAlignment"
                ResizeDirection="Auto">
                <controls:GridSplitter.Background>
                    <SolidColorBrush Opacity="0" />
                </controls:GridSplitter.Background>
                <controls:GridSplitter.Foreground>
                    <SolidColorBrush Opacity="0" />
                </controls:GridSplitter.Foreground>
                <controls:GridSplitter.RenderTransform>
                    <TranslateTransform X="-8" />
                </controls:GridSplitter.RenderTransform>
            </controls:GridSplitter>
        </Grid>
        <Grid Background="Transparent" Visibility="{x:Bind Path=m_viewModel.ShowError, Mode=OneWay}">
            <StackPanel VerticalAlignment="Center">
                <FontIcon
                    HorizontalAlignment="Center"
                    FontFamily="{StaticResource BiliIconFont}"
                    FontSize="36"
                    Glyph="&#xE68E;" />
                <TextBlock
                    Margin="0,8,0,0"
                    Text="{x:Bind Path=m_viewModel.ErrorMsg, Mode=OneWay}"
                    TextAlignment="Center" />
                <HyperlinkButton HorizontalAlignment="Center" Click="btnRefresh_Click">
                    <TextBlock>点击刷新</TextBlock>
                </HyperlinkButton>
            </StackPanel>
        </Grid>
        <muxc:ProgressRing
            Grid.ColumnSpan="2"
            Width="50"
            Height="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsActive="True"
            Visibility="{x:Bind Path=m_viewModel.Loading, Mode=OneWay}" />
    </Grid>

</local:PlayPage>
